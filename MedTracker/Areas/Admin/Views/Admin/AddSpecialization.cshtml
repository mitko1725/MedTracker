@model MedTracker.Models.Specialization;
<link rel="stylesheet" href="~/css/adminIndex.css">
<div class="wrapper">
    <div class="sidebar">
        <h2>Sidebar</h2>
        <ul>

            <li><a asp-area="" asp-controller="Home" asp-action="Index"><i class="fas fa-home"></i>Home Page</a></li>
            <li><a asp-area="Admin" asp-controller="Admin" asp-action="ApproveDoctors"><i class="fas fa-user"></i>Pending Doctor Profiles</a></li>
            <li><a asp-area="Admin" asp-controller="Admin" asp-action="Specializations"><i class="fas fa-address-card"></i>Doctor Specializations</a></li>
            <li><a href="#"><i class="fas fa-project-diagram"></i></a></li>
            <li><a href="#"><i class="fas fa-blog"></i></a></li>
            <li><a href="#"><i class="fas fa-address-book"></i></a></li>
            <li><a href="#"><i class="fas fa-map-pin"></i></a></li>
        </ul>

    </div>

    <div class="main_content">
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">

            <div class="collapse navbar-collapse" id="navbarTogglerDemo02">
                <ul class="navbar-nav mr-auto mt-2 mt-lg-0">
                    <li class="nav-item active">
                        <a class="nav-link" asp-action="Create">Add new Specialization<span class="sr-only"></span></a>
                    </li>


                </ul>
                <div class="form-inline my-2 my-lg-0">
                    <input class="form-control mr-sm-2" type="search" placeholder="Search car by Make" name="makeName" required>
                    <button class="btn btn-outline-light my-2 my-sm-0" type="submit" name="carSearchButton">Search</button>
                    <form id="searchBar" asp-action="Search" method="get">
                    </form>
                </div>
            </div>
        </nav>
        <div class="container">

            <hr />
            <form class="text-center border border-light p-5" asp-action="AddSpecialization" method="post">


          
                <label for="ProductionDate">Specialization name</label>
                <input name="specName" class="form-control mb-4"  required>
                <span asp-validation-for="@Model.Name" class="text-danger"></span>
                <br>
        
                <br>


                <!-- Send button -->
                <button class="btn btn-outline-success btn-block" type="submit">Send</button>
                <br>
                @Html.ActionLink("Cancel", "Specializations", "Admin", new object { }, new { @class = "btn btn-outline-danger btn-block" })
            </form>

            <br>
            <br>
            <br>
            <br>


        </div>
        </div>
</div>