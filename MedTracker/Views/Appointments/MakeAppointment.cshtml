@model MedTracker.Web.Models.Appointments.DoctorDetailsViewModel;



<link type="text/css" rel="stylesheet" href="~/lib/calendar_g.css" />
<link rel="stylesheet" href="~/css/makeAppointment.css"/>
<div id="slider" class="inspiro-slider  arrows-creative dots-creative" data-height-xs="360" style="height:500px !important;">
    <!-- Slide 1 -->
    <div class="slide" style="height:500px !important; background-color:#F8F8F8">
        <div class="slide-captions text-light text-center">
            <div class="MyLayoutContainer mt-5 mb-5">



                <div class="row" data-animation="fadeInLeft">
                    <div class="col-sm-3">
                        @if (string.IsNullOrEmpty(Model.DoctorDetails.ProfilePic))
                        {
                            <picture>

                                <img src="~/images/picture.jpg" style="width:400px;height:300px">
                            </picture>
                        }
                        else
                        {
                            <a><img src="~/images/@Model.DoctorDetails.ProfilePic" class="img-thumbnail ml-2" style="height:250px;width:250px;"></a>
                        }




                        @*<picture>



            <img src="~/images/picture.jpg" loading="lazy" style="width:3%; height:30%;">
        </picture>*@



                    </div>
                    <div class="col-sm-8 mb-2 mr-2">
                        <h2 class="mb-0" style="color:black !important;">@String.Concat(Model.DoctorDetails.FirstName," ", Model.DoctorDetails.MiddleName," ", Model.DoctorDetails.LastName)</h2>
                        <p  style="color:black !important;">

                            @String.Join(", ",Model.DoctorsSpecializations.ToDictionary(x => x.Id, y => y.Name).Values)
                        </p>
                       

                    </div>




                </div>




            </div>
        </div>
    </div>
    <!-- end: Slide 1 -->
</div>


<div class="container">
    <div class="tabs">
        <ul class="nav nav-tabs" id="myTab" role="tablist">
            <li class="nav-item">
                <a class="nav-link active" id="home-tab" data-toggle="tab" href="#home" role="tab" aria-controls="home" aria-selected="true">Biography</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" id="profile-tab" data-toggle="tab" href="#profile" role="tab" aria-controls="profile" aria-selected="false">Contact</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" id="contact-tab" data-toggle="tab" href="#contact" role="tab" aria-controls="contact" aria-selected="false">Working Hours</a>
            </li>
        </ul>
        <div class="tab-content" id="myTabContent">
            <div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="home-tab">
                <p>@Model.DoctorDetails.Biography </p>
            </div>
            <div class="tab-pane fade" id="profile" role="tabpanel" aria-labelledby="profile-tab">
                <h2><i class="fa fa-phone"></i> @Model.UserDoctorDetails.PhoneNumber </h2>
             
                <h2><i class="fa fa-envelope"></i> @Model.UserDoctorDetails.Email </h2>
            </div>
            <div class="tab-pane fade" id="contact" role="tabpanel" aria-labelledby="contact-tab">
                <div class="container demo-bg">
                    <div class="row">
                        <div class="col-sm-4"></div>
                        <div class="col-sm-4"></div>
                        <div class="col-sm-4">
                            <div class="business-hours">
                                <h2 class="title">Opening Hours</h2>
                                <ul class="list-unstyled opening-hours">
                                    <li>Sunday <span class="pull-right">Closed</span></li>
                                    <li>Monday <span class="pull-right">9:00-22:00</span></li>
                                    <li>Tuesday <span class="pull-right">9:00-22:00</span></li>
                                    <li>Wednesday <span class="pull-right">9:00-22:00</span></li>
                                    <li>Thursday <span class="pull-right">9:00-22:00</span></li>
                                    <li>Friday <span class="pull-right">9:00-23:30</span></li>
                                    <li>Saturday <span class="pull-right">14:00-23:30</span></li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="space"></div>


</div>


<div class="MyLayoutContainer">
    <input type="hidden" id="doctorId" value="@Model.DoctorDetails.Id">
    <div style="display: flex;">
        <div style="margin-right: 10px;">
            <div id="nav"></div>
        </div>
        <div style="flex-grow: 1;">
            <div id="dp"></div>
        </div>
    </div>

</div>


<script src="~/lib/daypilot/daypilot-all.min.js" type="text/javascript"></script>
<script src="~/js/MakeAppointment.js" type="text/javascript"></script>

